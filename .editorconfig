root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab
indent_size = 4

[*.{erl,hrl,config,app.src}]
indent_style = space
indent_size = 4

[*.{ex,exs}]
indent_style = space
indent_size = 2
